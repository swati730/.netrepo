
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" DefaultTargets="Run">
<PropertyGroup>
<MSBuildCommunityTasksPath>$(MSBuildProjectDirectory)</MSBuildCommunityTasksPath>
</PropertyGroup>
<Import Project="$(MSBuildProjectDirectory)\MSBuild.Community.Tasks.Targets"/>

    <PropertyGroup> 

    <OutDir>$(MSBuildProjectDirectory)\OutDir\</OutDir>
    </PropertyGroup>
    <ItemGroup>
        <Solution Include="$(MSBuildProjectDirectory)\MvcApplication2.Tests\MvcApplication2.Tests.csproj">
            	
        </Solution>
    </ItemGroup>

    <Target Name="Run">
     
    <CallTarget Targets="BuildSolution" />
    <CallTarget Targets="RunTests" />
 
  </Target>
 
  <PropertyGroup>
    <NUnitResultsFile>$(OutDir)\nunit-result.xml</NUnitResultsFile>
  </PropertyGroup>
 
 
 
  <Target Name="BuildSolution">
    <Message Text="BuildSolution called." />
    <MSBuild Projects="@(Solution)"/>
  </Target>
 <Target Name="ShowReservedProperties">  
    <Message Text="MSBuild ProjectDir = $(MSBuildProjectDirectory)" > 
</Message>  
 </Target>
 
  <Target Name="RunTests">
 
        <NUnit   Assemblies="$(MSBuildProjectDirectory)\MvcApplication2.Tests\bin\Debug\MvcApplication2.Tests.dll"
        ToolPath="$(MSBuildProjectDirectory)\packages\NUnit.Runners.2.6.2\tools"
        OutputXmlFile="$(NUnitResultsFile)">
</NUnit>
  </Target>
 
</Project>